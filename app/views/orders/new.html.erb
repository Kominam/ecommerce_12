<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3">
        <a class="active" href="#your-cart"><%= t ".your_cart" %></a>
      </li>
      <li class="tab col s3">
        <a href="#cust-info"><%= t ".customer_info" %></a>
      </li>
    </ul>
  </div>
  <div id="your-cart" class="col s12">
    <table style="border-top: none; ">
      <thead>
      <tr>
        <th><%= t "cart.index.code" %></th>
        <th><%= t "admin.products.show.product_name" %></th>
        <th><%= t "cart.index.image" %></th>
        <th><%= t "cart.index.price" %></th>
        <th><%= t "cart.index.quantity" %></th>
        <th><%= t "cart.index.total_price" %></th>
      </tr>
      </thead>
      <% @product_carts.each do |product, cart_params| %>
        <% unless product.nil? %>
          <%= render "orders/order_row", product: product,
            cart_params: cart_params %>
        <% end %>
      <% end %>
      <tr>
        <td colspan="6">
          <span class="badge red white-text"><%= t ".total" %>: <%= @total_pay %></span>
        </td>
      </tr>
    </table>
  </div>
  <div id="cust-info" class="col s12">
    <%= form_tag orders_path, method: :post do %>
      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name, @user.name, readonly: true,
          class: "form-control" %>
      </div>
      <div>
        <%= label_tag :email %>
        <%= text_field_tag :email, @user.email, readonly: true,
          class: "form-control"  %>
      </div>
      <div>
        <%= label_tag :phone %>
        <%= text_field_tag :phone, params[:phone], value: @user.phone,
          class: "form-control"  %>
      </div>
      <div>
        <%= label_tag :shipping_address %>
        <%= text_field_tag :address, params[:shipping_address],
          class: "form-control" %>
      </div>
      <div class="right">
        <%= submit_tag t(".checkout"), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
