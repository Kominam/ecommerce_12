<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= render "layouts/head" %>
    <%= render "layouts/shim" %>
  </head>
  <body style="<%= "padding-top: 0px" if current_page? root_url %>">
    <div class="page-flexbox-wrapper">
      <header>
        <%= render "layouts/admin_header" %>
      </header>
      <main class="admin-panel">
        <div class="container admin-container" id="main-content">
          <% flash.each do |message_type, message| %>
            <%= javascript_tag do %>
              <%= render(partial: "shared/error_messages", formats: [:js],
                locals:{message_type: message_type, message: message}) %>
            <% end %>
          <% end %>
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
