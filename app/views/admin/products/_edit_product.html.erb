<div id="modal2-<%= product.id %>" class="modal">
  <div class="modal-content">
    <%= form_for [:admin, product], method: :put do |f| %>
      <%= f.hidden_field :id %>
      <div>
        <label><%= t ".name" %> *</label>
        <%= f.text_field :name, required: true,
          placeholder: t(".name_required"), class: "input-field" %>
        <div>
          <label for="#description"><%= t ".description" %></label>
          <%= f.text_area :description, class: "materialize-textarea" %>
        </div>
        <% if product.image.present? %>
          <%= image_tag product.image, class: "materialboxed", width: "50px" %>
        <% end %>
        <div class="file-field input-field">
          <div class="btn">
            <span><%= t "admin.products.form.image" %></span>
            <%= f.file_field :image %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
        <div>
          <label><%= t".parent_category" %></label>
          <%= f.select :category_id, options_for_select(@categories.collect {
            |cate| ["#{'-' * cate.depth} #{cate.name}", cate.id]},
            product.category.id), {},
            {class: "select", id: "parent_category"} %>
        </div>
        <div>
          <label><%= t ".price" %></label>
          <%= f.number_field :price, min: 0 %>
        </div>
        <div>
          <label><%= t ".in_stock" %></label>
          <%= f.number_field :in_stock, min: 0 %>
        </div>
      </div>
  </div>
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-green btn-flat">
      <%= t ".cancel" %>
    </a>
    <button class="modal-action waves-effect waves-green btn-flat button-submit">
      <%= f.submit t(".edit") %>
    </button>
  </div>
    <% end %>
</div>
