<%= form_for [:admin, Product.new], id: "add-category-form" do |f| %>
  <div id="modal1" class="modal">
    <div class="modal-content">
      <div>
        <label><%= t".parent_category" %></label>
        <%= f.select :category_id, options_for_select(@categories.collect {
          |cate| ["#{'-' * cate.depth} #{cate.name}", cate.id]}), {} ,
          {class: "select", id: "parent_category"} %>
      </div>
      <div>
        <label><%= t ".name" %></label>
        <%= f.text_field :name %>
      </div>
      <div class="file-field input-field">
        <div class="btn">
          <span><%= t ".image" %></span>
          <%= f.file_field :image , multipart: true %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div>
        <label><%= t ".price" %></label>
        <%= f.number_field :price, min: 0 %>
      </div>
      <div>
        <label><%= t ".in_stock" %></label>
        <%= f.number_field :in_stock, min: 0 %>
      </div>
    </div>
    <div class="modal-footer">
      <button class="modal-action modal-close waves-effect waves-green btn-flat" data-dismiss="modal">
      <%= t ".cancel" %>
      <button class="modal-action modal-close waves-effect waves-green btn-flat">
      <%= f.submit t(".add")%>
    </div>
  </div>
<% end %>
<%= form_tag import_admin_products_path, multipart: true do %>
  <div class="file-field input-field">
    <div class="btn">
      <span><%= t ".import" %></span>
      <%= file_field_tag :file %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path file-import" type="text">
      <%= submit_tag t(".submit"), class: "waves-effect waves-green btn right" %>
    </div>
  </div>
<% end %>
