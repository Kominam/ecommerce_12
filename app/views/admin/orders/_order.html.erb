<div class="col s4 m4">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div>
        <span class="card-title">
        <%= order.order_code %>
        </span>
      </div>
      <span class="right badge">
        <%= form_tag admin_order_path(order) , method: :put do %>
          <%= hidden_field_tag :id, value: order.id %>
          <%= select_tag :status, options_from_collection_for_select(Order.statuses,
            :first, :first, order.status), class: "admin-update-order",
            id: "change-status-#{order.id}" %>
          <%= submit_tag "", style: "display: none" %>
        <% end %>
      </span>
      <p><strong><%= t "orders.new.total" %>:</strong> <%= order.total_pay %></p>
      <p><strong><%= t ".phone" %>:</strong> <%= order.phone %></p>
      <p><strong><%= t ".shipping_address" %>:</strong> <%= order.shipping_address %></p>
      <p><strong><%= t ".customer" %>:</strong> <%= order.user.name %></p>
      <p><strong><%= t ".updated_at" %>:</strong> <%= order.updated_at %></p>
    </div>
    <div class="card-action center">
      <a href="#"><i class="material-icons">alarm</i>
        <%= convert_datetime order.created_at %>
      </a>
    </div>
  </div>
</div>
