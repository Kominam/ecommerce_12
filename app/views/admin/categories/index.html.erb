<% provide :title, t(".title") %>
<div class="row">
  <h2 class="center"><i class="material-icons">feedback</i><%= t ".title" %></h2>
  <div class="row">
    <div class="col m8">
      <label><%= t "display" %></label>
      <%= search_form_for @search, url: admin_categories_path, style: "display: block" do |f| %>
      <%= select_tag :limit,
        options_from_collection_for_select(Settings.show_limit,
        :second, :second, selected: params[:limit] || Settings.show_limit.limit),
        id: "show-limit", style: "display: block" %>
        <%= f.submit "", style: "display: none" %>
      <% end %>
      <label><%= t "records" %></label>
      <div class="inline">
        <%= search_form_for @q, url: admin_categories_path do |f| %>
          <%= f.label :name_cont, t(".name_contains"), class: "inline" %>
          <%= f.text_field :name_cont, class: "inline" %>
          <%= f.submit "", style: "display: none" %>
        <% end %>
      </div>
    </div>
    <div class="col m4 bottom-sheet add-category">
      <a class="waves-effect waves-light btn left" href="#modal1">
        <%= t".add" %>
      </a>
      <%= render "add_category" %>
    </div>
  </div>
    <table class="striped bordered highlight">
      <thead>
      <tr>
        <th class="center-align">
          <%= t ".number" %>
        </th>
        <th class="center-align">
          <%= t ".name" %>
        </th>
        <th class="center-align">
          <%= t ".description" %>
        </th>
        <th class="center-align">
          <%= t".created_at" %>
        </th>
        <th class="center-align">
          <%= t ".option" %>
        </th>
      </tr>
      </thead>
      <tbody>
      <%= render @categories %>
      </tbody>
    </table>
    <%= paginate @categories %>
</div>
