<% provide :title, t(".title") %>
<h2 class="center"><i class="material-icons">feedback</i><%= t ".title" %></h2>
<div class="row">
  <div class="col s12 m2">
    <label><%= t "display" %></label>
    <%= search_form_for @search, url: admin_users_path do |f| %>
    <%= select_tag :limit,
      options_from_collection_for_select(Settings.show_limit,
      :second, :second, selected: params[:limit] || Settings.show_limit.limit),
      id: "show-limit", style: "display: block" %>
    <%= f.submit "", style: "display: none" %>
    <% end %>
    <label><%= t "records" %></label>
  </div>
  <div class="col s12 m10 right">
    <div class="inline">
      <%= search_form_for @q, url: admin_users_path do |f| %>
        <%= f.label :name_or_email_cont, t(".name_or_email") %>
        <%= f.text_field :name_or_email_cont %>
        <%= f.submit "", style: "display: none" %>
    </div>
      <% end %>
  </div>
</div>
<table class="striped bordered highlight">
  <thead>
    <tr>
      <th class="center-align">
        <%= t ".number" %>
      </th>
      <th class="center-align">
        <%= t ".name" %>
      </th>
      <th class="center-align">
        <%= t ".email" %>
      </th>
      <th class="center-align">
        <%= t".sign_in_count" %>
      </th>
      <th class="center-align">
        <%= t".created_at" %>
      </th>
      <th class="center-align">
        <%= t ".option" %>
      </th>
    </tr>
  </thead>
  <tbody id="users">
    <%= render @users %>
  </tbody>
</table>
<div id="paginator">
  <%= paginate @users, remote: true %>
</div>
